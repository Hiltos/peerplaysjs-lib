{
  "name": "peerplaysjs-ws",
  "version": "0.4.21",
  "description": "Pure JavaScript Bitshares/Graphene websocket interface for node.js and browsers.",
  "browser": {
    "ws": false
  },
  "scripts": {
    "test": "mocha --recursive",
    "test:watch": "npm test -- --watch",
    "test:manager": "BABEL_ENV=test mocha --compilers js:babel-core/register ./test/Manager --watch",
    "clean": "rm -rf ./cjs/* & rm -rf ./build/* & rm -rf ./es/*",
    "prebuild": "npm run clean",
    "build": "babel lib --presets babel-preset-es2015 --out-dir dist",
    "postbuild": "npm run browserify",
    "prepublish": "npm run build",
    "browserify": "browserify dist/src/ApiInstances.js --standalone grapheneWS -o build/graphenejs-ws.js -d",
    "postbrowserify": "uglifyjs --compress --mangle --sequences --drop_console --mangle-props --screw-ie8 --output build/graphenejs-ws.min.js -- build/graphenejs-ws.js",
    "bundle": "npm run browserify && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pbsa/peerplaysjs-ws.git"
  },
  "contributors": [
    "Sigve Kvalsvik <bitsharesblocks@gmail.com> (https://github.com/svk31)",
    "James Calfee <james@jcalfee.info> (https://github.com/jcalfee/)"
  ],
  "license": "BSD-2-Clause-FreeBSD",
  "bugs": {
    "url": "https://github.com/pbsa/peerplaysjs-ws/issues"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "./dist/index.js",
  "dependencies": {
    "ws": "2.3.1"
  },
  "devDependencies": {
    "assert": "^1.3.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "browserify": "^13.0.1",
    "mocha": "^2.3.4",
    "uglifyjs": "^2.4.10"
  }
}
